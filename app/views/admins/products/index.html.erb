<div class="table-responsive col-md-9 ml-sm-auto col-lg-10 px-md-4">
  <%= form_with scope: :product, url: admins_products_path, local: true, method: :get do |f| %>
    <h2 class="mt-5">商品マスター</h2>
    <%= f.label "商品ID" %>
    <%= f.number_field :id %>
    <%= f.label "商品名" %>
    <%= f.text_field :name %>
    <%= f.submit "検索する", :class => "btn-warning" %>
  <% end %>

  <table class="table table-striped table-sm">
    <h2 class="mt-5">受注状況</h2>
    <thead>
    <tr>
      <th>日時</th>
      <th>商品ID</th>
      <th>商品名</th>
    </tr>
    </thead>
    <tbody>
      <% @products.each do |product| %>
      <tr>
          <td><%= product.created_at.strftime('%Y/%m/%d %H:%M') %></td>
          <td><%= product.id %></td>
          <td><%= product.name%></td>
          <td><%= link_to "編集", edit_admins_product_path(product) %></td>
          <td><%= link_to "削除", admins_product_path(product.id), method: :delete %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>