<div class="table-responsive col-md-6 ml-sm-auto col-lg-10 px-md-4">
  <h1>商品情報の編集</h1>

  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= form_with(model: @product, url: admins_product_path, local: true ) do |f| %>

        <%= f.label :商品名 %>
        <%= f.text_field :name %><br>

        <%= f.label :価格 %>
        <%= f.number_field :price %><br>

        <%= f.label :タイプ %>
        <%= f.select :gender_type, [["男性用", "men"], ["女性用", "women"],["ユニセックス", "unisex"],["子供用", "kids"]], prompt: "選択して下さい" %><br>

        <%= f.label :カテゴリ %>
        <%= f.select :category, [["スニーカー", "sneakers"], ["サンダル", "sandals"], ["ヒール", "heels"], ["ドレスシューズ", "dress-shoses"]], prompt: "選択して下さい" %><br>

        <%= f.label :色 %>
        <%= f.select :color, [["黒", "black"], ["白", "white"], ["グレー", "gray"], ["青", "blue"], ["赤", "red"], ["緑", "green"], ["ピンク", "pink"], ["ベージュ", "beige"]], prompt: "選択して下さい" %><br>

        <%= f.label :サイズ %>
        <%= f.select :size, 9..30, prompt: "選択して下さい" %><br>

        <%= f.label :商品画像%>
        <%= f.file_field :image %><br>

        <%= f.label :詳細 %>
        <%= f.text_field :description %><br>

        <%= f.label :在庫 %>
        <%= f.select :stock, 1..10, prompt: "選択して下さい" %><br>

        <%= f.submit "変更を保存", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>