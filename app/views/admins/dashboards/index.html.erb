<main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-md-4">
  <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Dashboard</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
      <div class="btn-group mr-2">
        <button type="button" class="btn btn-sm btn-outline-secondary">出力する</button>
      </div>
      <button type="button" class="btn btn-sm btn-outline-secondary dropdown-toggle">
        <span data-feather="calendar"></span>
        今週
      </button>
    </div>
  </div>

  <div class="card-deck">
    <div class="card border-dark mb-3" style="max-width: 18rem;">
      <div class="card-header">総売上</div>
      <div class="card-body text-dark">
        <h5 class="card-title"><%= @total_price.to_i.to_s(:delimited) %>円</h5>
        <p class="card-text">オーダー数：<%= @total_amount.to_i.to_s(:delimited) %></p>
      </div>
    </div>
    <div class="card border-dark mb-3" style="max-width: 18rem;">
      <div class="card-header">今日の売り上げ</div>
      <div class="card-body text-dark">
        <h5 class="card-title"><%= @total_today.to_i.to_s(:delimited) %>円</h5>
        <p class="card-text">オーダー数：<%= @total_amount_today.to_i.to_s(:delimited) %></p>
      </div>
    </div>
    <div class="card border-dark mb-3" style="max-width: 18rem;">
      <div class="card-header">今月の売上</div>
      <div class="card-body text-dark">
        <h5 class="card-title"><%= @total_price_this_month.to_i.to_s(:delimited) %>円</h5>
        <p class="card-text">オーダー数：<%= @total_amount_month.to_i.to_s(:delimited) %></p>
      </div>
    </div>
  </div>
  
  <canvas id="myChart"></canvas>

  <script>
  <% test_data = [880, 740, 900, 520, 930] %>
  var ctx = document.getElementById('myChart');
  var myChart = new Chart(ctx, {
    type: 'line',

    data: {
      labels: ["1月", "2月", "3月", "4月", "5月"],
      datasets: [{
          label: 'プリンター販売台数',
          data: <%= test_data %>,
          borderColor: 'rgba(255, 100, 100, 1)',
          lineTension: 0,
          fill: false,
          borderWidth: 3
      }]
    },
    
    options: {
      scales: {
          yAxes: [{
              ticks: {
                  min: 300
                  //beginAtZero: true
              }
          }]
      }
    }
  });
  </script>
</main>
  