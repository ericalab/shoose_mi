<div class="container">
  <div class="row mt-5">
    <div class="col-md-6 mx-auto">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <h2 class="mt-5">会員登録</h2>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class="field pt-4">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control", placeholder:"Emailアドレス"%>
        </div>

        <div class="field pt-4">
          <%= f.label :password %>
          <% if @minimum_password_length %>
          <em>(最低 <%= @minimum_password_length %> 文字)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", class:"form-control", placeholder:"パスワード"%>
        </div>

        <div class="field pt-4">
          <%= f.label :password %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control", placeholder:"再確認"%>
        </div>

        <div class="actions mt-4">
          <%= f.submit "会員登録", class: "btn btn-lg btn-warning btn-block" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
