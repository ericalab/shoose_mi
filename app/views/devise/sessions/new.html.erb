<div class="container mt-5">
  <div class="row">
    <div class="col-md-6 border-right">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'form-signin'}) do |f| %>
        <h2 class="text-center font-weight-normal mt-5">ログイン</h2>
        <div class="field pt-4">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control", placeholder:"Emailアドレス"%>
        </div>

        <div class="field pt-4">
          <%= f.label :password %><br />
          <%= f.password_field :password, autocomplete: "current-password", class:"form-control", placeholder:"パスワード"%>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>

        <div class="actions mt-4">
          <%= f.submit "ログイン", class: "btn btn-lg btn-warning btn-block" %>
        </div>
      <% end %>
      <div class="text-center"><%= render "devise/shared/links" %></div>
    </div>

    <div class="col-md-4 offset-1"">
      <h2 class="text-center font-weight-normal my-5">会員登録</h2>
      <%= link_to "会員登録", new_user_registration_path, class: 'btn btn-lg btn-warning btn-block' %>
    </div>
  </div>
</div>